---
layout: layouts/base
---
<article itemtype="http://schema.org/BlogPosting" itemscope="">
  <header>
    {% if cover %}
      <img src="{{ cover.url }}" alt="{{ cover.alt }}">
    {% endif %}

    <time class="text_muted" datetime="{{ publicationDate | dateToIsoString }}" itemprop="datePublished">
      {% formattedDate publicationDate %}
    </time>

    <h1 itemprop="name headline">{{ title }}</h1>
  </header>

  <div class="content" itemprop="articleBody">
    {{ content | safe }}
  </div>
</article>
