---json
{
  "layout": "layouts/base",
  "title": "Заметки",
  "description": "Articles and notes on everything",
  "alternates": [
    {
      "href": "feed.xml",
      "type": "application/atom+xml"
    }
  ]
}
---

<div class="content">
  <h1>{{ title }} <sup><a class="caps" href="feed.xml">RSS</a></sup></h1>

  {% for year, posts in collections.notes | groupByPublicationYear %}
  <section>
    <h2>{{ year }}</h2>

    <ul>
      {% for post in posts %}
      <li>
        <a href="{{ post.url }}">{{ post.data.title }}</a> <span class="text_muted">{% formattedDate post.date %}</span>
      </li>
      {% endfor %}
    </ul>
  </section>
  {% endfor %}
</div>
